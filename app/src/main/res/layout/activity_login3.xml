        <TextView
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לא רשום עדיין? הרשם כאן"
            android:layout_gravity="center"
            android:gravity="end"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>
